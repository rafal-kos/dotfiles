{
    "extends": [
        "prettier"
    ],
    "env": {
        "browser": true,
        "node": true
    },
    "parser": "babel-eslint",
    "rules": {
        "no-console": 0,
        "no-alert": 1,
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true,
                "printWidth": 120
            }
        ]
    },
    "plugins": [
        "html",
        "prettier"
    ]
}